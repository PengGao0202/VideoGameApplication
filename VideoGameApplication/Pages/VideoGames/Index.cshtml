@page
@model VideoGameApplication.Pages.VideoGames.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].PublicationYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].MinimumPlayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].MaximumPlayer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VideoGame) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumPlayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumPlayer)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
